# DownDetector Notification Bot Configuration

# ===================
# Scraper Configuration
# ===================
SCRAPER_SCRAPE_INTERVAL_MINUTES=10
SCRAPER_TIMEOUT_SECONDS=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_DELAY_SECONDS=5
SCRAPER_MONITORED_SERVICES=google,facebook,twitter,instagram,whatsapp,youtube,netflix,amazon,microsoft,apple

# ===================
# Email Configuration
# ===================
EMAIL_SMTP_HOST=smtp.mailgun.org
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_SMTP_USERNAME=postmaster@yourdomain.mailgun.org
EMAIL_SMTP_PASSWORD=your-smtp-password
EMAIL_SENDER_EMAIL=notifications@yourdomain.com
EMAIL_RECIPIENT_EMAILS=user1@example.com,user2@example.com

# ===================
# AI Configuration (Version 2)
# ===================
AI_PROVIDER=openai
AI_API_KEY=sk-your-openai-api-key
AI_MODEL=gpt-4-turbo-preview
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_ENABLE_CACHE=true

# ===================
# API Configuration
# ===================
API_RATE_LIMIT_PER_MINUTE=100
API_ENABLE_CORS=true
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# Change Detection
# ===================
DETECTOR_REPORT_COUNT_THRESHOLD=1000

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/outage_monitor.log
